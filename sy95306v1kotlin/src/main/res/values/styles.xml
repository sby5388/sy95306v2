<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="myRadioButton">
        <item name="android:focusable">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/radio_group_button</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/radio_group_button_text</item>
    </style>

    <!--todo  train detail style-->
    <style name="train_detail_item_textView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:padding">@dimen/detail_padding</item>
        <item name="android:textSize">@dimen/detail_text_size</item>

    </style>

    <!-- todo list fragment editText style-->
    <style name="editText_list_fragment">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
</resources>
