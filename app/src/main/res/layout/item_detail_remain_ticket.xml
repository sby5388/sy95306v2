<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/trainCode"
        android:layout_width="@dimen/remain_ticket_width"
        android:layout_height="@dimen/remain_ticket_height"
        android:gravity="center"
        android:text="T9525" />

    <LinearLayout
        android:layout_width="@dimen/remain_ticket_width"
        android:layout_height="@dimen/remain_ticket_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fromStation"
            android:layout_width="@dimen/remain_ticket_width"
            android:layout_height="@dimen/remain_ticket_height_half"
            android:gravity="center"
            android:text="乌鲁木齐南" />

        <TextView
            android:id="@+id/toStation"
            android:layout_width="@dimen/remain_ticket_width"
            android:layout_height="@dimen/remain_ticket_height_half"
            android:gravity="center"
            android:text="乌鲁木齐" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/remain_ticket_width"
        android:layout_height="@dimen/remain_ticket_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/leaveTime"
            android:layout_width="@dimen/remain_ticket_width"
            android:layout_height="@dimen/remain_ticket_height_half"
            android:gravity="center"
            android:text="16:49" />

        <TextView
            android:id="@+id/arriveTime"
            android:layout_width="@dimen/remain_ticket_width"
            android:layout_height="@dimen/remain_ticket_height_half"
            android:gravity="center"
            android:text="17:17" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/remain_ticket_width"
        android:layout_height="@dimen/remain_ticket_height"
        android:orientation="vertical">

        <TextView
            android:id="@+id/speedTime"
            android:layout_width="@dimen/remain_ticket_width"
            android:layout_height="@dimen/remain_ticket_height_half"
            android:gravity="center"
            android:text="00:18" />

        <TextView
            android:id="@+id/contentDescription"
            android:layout_width="@dimen/remain_ticket_width"
            android:layout_height="@dimen/remain_ticket_height_half"
            android:gravity="center"
            android:text="当日到达" />
    </LinearLayout>
    <TextView
        android:id="@+id/zy"
        android:layout_width="@dimen/remain_ticket_width"
        android:layout_height="@dimen/remain_ticket_height"
        android:gravity="center"
        android:text="一等座" />

    <TextView
        android:id="@+id/ze"
        android:layout_width="@dimen/remain_ticket_width"
        android:layout_height="@dimen/remain_ticket_height"
        android:gravity="center"
        android:text="二等座" />
    <TextView
        android:id="@+id/wz"
        android:layout_width="@dimen/remain_ticket_width"
        android:layout_height="@dimen/remain_ticket_height"
        android:gravity="center"
        android:text="无座" />

    <TextView
        android:id="@+id/swz"
        android:layout_width="@dimen/remain_ticket_width"
        android:layout_height="@dimen/remain_ticket_height"
        android:gravity="center"
        android:text="商务座" />

    <TextView
        android:id="@+id/tz"
        android:layout_width="@dimen/remain_ticket_width"
        android:layout_height="@dimen/remain_ticket_height"
        android:gravity="center"
        android:text="特等座" />



    <TextView
        android:id="@+id/gjrw"
        android:layout_width="@dimen/remain_ticket_width"
        android:layout_height="@dimen/remain_ticket_height"
        android:gravity="center"
        android:text="高级软卧" />

    <TextView
        android:id="@+id/rw"
        android:layout_width="@dimen/remain_ticket_width"
        android:layout_height="@dimen/remain_ticket_height"
        android:gravity="center"
        android:text="软卧" />

    <TextView
        android:id="@+id/dw"
        android:layout_width="@dimen/remain_ticket_width"
        android:layout_height="@dimen/remain_ticket_height"
        android:gravity="center"
        android:text="动卧" />

    <TextView
        android:id="@+id/yw"
        android:layout_width="@dimen/remain_ticket_width"
        android:layout_height="@dimen/remain_ticket_height"
        android:gravity="center"
        android:text="硬卧" />

    <TextView
        android:id="@+id/rz"
        android:layout_width="@dimen/remain_ticket_width"
        android:layout_height="@dimen/remain_ticket_height"
        android:gravity="center"
        android:text="软座" />

    <TextView
        android:id="@+id/yz"
        android:layout_width="@dimen/remain_ticket_width"
        android:layout_height="@dimen/remain_ticket_height"
        android:gravity="center"
        android:text="硬座" />



</LinearLayout>