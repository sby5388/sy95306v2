<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.by5388.sy95306.MainActivity">


    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/center">

        <Button
            android:id="@+id/button_main_p2p"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/search_bg"
            android:enabled="false"
            android:text="@string/zhan_zhan"
            android:textColor="@drawable/main_button_text"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/search_text" />

        <Button
            android:id="@+id/button_main_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/search_bg"
            android:text="@string/che_ci"
            android:textColor="@drawable/main_button_text"
            android:textSize="22sp" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
